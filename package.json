{
    "name": "devzone",
    "version": "0.1.0",
    "description": "Bluesky bot that posts a daily 'On This Day in History' event",
    "type": "module",
    "scripts": {
        "start": "tsx blueskybot/src/main.ts",
        "test": "npm run lint && npm run prettier && npm run typecheck && tsx --test blueskybot/src/*.test.ts",
        "facegen": "npm test && open facegen/face.html",
        "typecheck": "tsc --noEmit",
        "preview": "tsx blueskybot/src/preview.ts",
        "preview:random": "tsx blueskybot/src/preview.ts --random",
        "lint": "eslint **/*.ts",
        "lint:fix": "eslint --fix **/*.ts",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alexpear/devzone.git"
    },
    "author": "alexpear",
    "license": "CC0-1.0",
    "bugs": {
        "url": "https://github.com/alexpear/devzone/issues"
    },
    "homepage": "https://github.com/alexpear/devzone#readme",
    "dependencies": {
        "@atproto/api": "^0.18.20",
        "dotenv": "^17.2.4"
    },
    "devDependencies": {
        "@types/node": "^25.2.3",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.8.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.55.0"
    }
}
